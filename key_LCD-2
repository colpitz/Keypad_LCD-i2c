#include <Keypad.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x26, 16, 2);
int pos = 0;
int fil = 1;
const byte ROWS = 4; // Cuatro filas
const byte COLS = 4; // Cuatro columnas
// Define the Keymap
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','.','D'}
};
// Connect keypad ROW0, ROW1, ROW2 and ROW3 to these Arduino pins.
byte rowPins[ROWS] = { 11, 10, 9, 8 };
// Connect keypad COL0, COL1 and COL2 to these Arduino pins.
byte colPins[COLS] = { 7, 6, 5, 4 }; 
// Create the Keypad
Keypad kpd = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );
char key;

String inString = ""; //Para conversion de caracteres.
Float freqSalida;
void setup()
{
 lcd.init();
 lcd.backlight();
 lcd.setCursor(pos, fil); 
}

/* escribir un numero el siguiente numero multiplicar por 10 el anterior 
y sumarle el nuevo numero , 
el siguiente multiplicar por 10 el resultado anterior y sumarle el nuevo numero
y asi sucesivamente hasta que aparezca un punto, apartir de ahi dividir por 10 y sumar el numero
asi sucesivamente hasta pulsar '*' que valida el numero y lo envia al generador de frecuencia
*/

void loop()
{
   if (key == '*')
   {
   pos =0;
   lcd.clear();
   inString = "";
   lcd.setCursor(pos, fil);
   }
   if (pos <= 16)
   {
   lcd.setCursor(pos, fil);
   key = kpd.getKey();
   }
   else
   {
    pos =0;
    lcd.clear();
    inString = "";
    lcd.setCursor(pos, fil);
    }
  if(key)  // Check for a valid key.
  {
 

    if (key != '*') { 

      // As long as the incoming byte
      // is not a newline,
      // convert the incoming byte to a char
      // and add it to the string
      inString += (char)key; // AÃ±adir el caracter leido a la string hasta el '*'
    }
 
 lcd.print(key);
 pos = pos + 1;
// coonversion de string a numerico float 2 decimales inString.toFloat() 
lcd.setCursor(0, 0);
freqSalida = inString.toFloat();
lcd.print(freqSalida);
  }
 
}
